@{
    Layout = null;
}

<html lang="en">
<head>
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Login</title>
    <meta content="width=device-width, initial-scale=1.0, shrink-to-fit=no" name="viewport">
    <link rel="icon" href="@Url.Content("~/Content/img/icon.png")" type="image/x-icon">

    <!-- Fonts and icons -->
    @Scripts.Render("~/Script/Font")
    <script>
        WebFont.load({
            google: { "families": ["Lato:300,400,700,900"] },
            custom: { "families": ["Flaticon", "Font Awesome 5 Solid", "Font Awesome 5 Regular", "Font Awesome 5 Brands", "simple-line-icons"], urls: ['@Url.Content("~/Content/css/fonts.min.css")'] },
            active: function () {
                sessionStorage.fonts = true;
            }
        });
    </script>

    <!-- CSS Files -->
    @Styles.Render("~/Themes/Core")

    <style>
        .msg ul {
            margin: 0;
            padding: 0;
        }

            .msg ul li {
                list-style: none;
                text-align: center;
            }
    </style>
</head>
<body class="login">
    <div class="wrapper wrapper-login wrapper-login-full p-0">
        <div class="login-aside w-50 d-flex flex-column align-items-center justify-content-center text-center bg-secondary-gradient" style="background: #1a2035 !important; ">
            <h1 class="title fw-bold text-white mb-3">Bogasari (PT Bogasari Flour Mills)</h1>
            <p class="subtitle text-white op-7">Deskripsi aplikasi</p>
        </div>
        <div class="login-aside w-50 d-flex align-items-center justify-content-center bg-white" style="background:url(@Url.Content("~/Content/img/bg-login.jpg")) center;background-size: cover;">
            <form id="loginForm" action="" method="post">
                <div class="container container-login container-transparent animated fadeIn">
                    <h3 class="text-center">Login</h3>
                    <div class="msg" style="color: #F00;">@Html.ValidationSummary("", new { @class = "validation" })</div>
                    <div class="login-form">
                        <div class="form-group">
                            <label for="username" class="placeholder"><b>*Username</b></label>
                            <input id="username" name="username" type="text" class="form-control" required="">
                        </div>
                        <div class="form-group">
                            <label for="password" class="placeholder"><b>*Password</b></label>
                            <div class="position-relative">
                                <input id="password" name="password" type="password" class="form-control" required="" maxlength="20">
                                <div class="show-password">
                                    <i class="icon-eye"></i>
                                </div>
                            </div>
                        </div>
                        <div class="form-group form-action-d-flex mb-3">
                            <div class="custom-control custom-checkbox">
                                <a href="#">Forgot Password</a>
                            </div>
                            <button type="submit" class="btn btn-default col-md-5 float-right mt-3 mt-sm-0 fw-bold">Sign In</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
    @Scripts.Render("~/Script/jquery")
    @Scripts.Render("~/Script/Core")

</body>
</html>
